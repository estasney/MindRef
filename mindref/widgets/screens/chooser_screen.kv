#:import NoteCategories widgets.categories
#:import roe widgets.effects.scrolling

<CategoryScreenScrollWrapper>:
    chooser: chooser
    NoteCategories:
        id: chooser
        categories: app.note_categories
        size_hint_y: None

<NoteCategoryChooserScreen>:
    id: category_screen
    chooser: chooser
    canvas.before:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            size: self.size
            pos: self.pos
    CategoryScreenScrollWrapper:
        screen: category_screen
        id: chooser
        do_scroll_x: False
        effect_y: roe.RefreshOverscrollEffect(edge_damping=.5, min_overscroll=dp(50))
