#:import NoteCategories widgets.categories
#:import roe widgets.effects.scrolling
#:import Toolbar widgets.toolbar

<CategoryScreenScrollWrapper>:
    chooser: chooser
    NoteCategories:
        id: chooser
        categories: app.note_categories
        size_hint_y: None

<NoteCategoryChooserScreen>:
    id: category_screen
    chooser: chooser
    canvas.before:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            size_hint_y: None
            padding: dp(20), dp(10), dp(10), dp(5)
            height: dp(50)
        CategoryScreenScrollWrapper:
            screen: category_screen
            id: chooser
            do_scroll_x: False
            effect_y: roe.RefreshOverscrollEffect(min_overscroll=dp(50))
