<ScreenContainer>:
    layout: layout
    background_color: app.colors['Dark']
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        ScatterLayout:
            canvas.before:
                Color:
                    rgba: root.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: layout
            height: layout_content.minimum_height
            scale: 1
            do_translation: False, False
            do_scale: True
            do_rotation: False
            BoxLayout:
                id: layout_content
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 0
                spacing: 0
                size_hint: None, None
                width: root.width




