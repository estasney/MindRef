#:import ScrollingListView widgets.list_view.list_view
#:import LargeLabel widgets.style
#:import NoteActionButton widgets.buttons.button_bar
#:import TypeAhead widgets.typeahead.typeahead
<ListViewBar@BoxLayout>:
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: dp(5), dp(1), dp(5), dp(0)
        TypeAhead:
            id: typeahead



<NoteListViewScreen>:
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        ListViewBar:
            padding: 0, dp(5), 0, dp(5)
            size_hint: 1, 0.1
            size_hint_max_y: dp(45)
        ScrollingListView:
            meta_notes: app.note_category_meta
