#:import LargeLabel widgets.style
#:import BaseLabel widgets.style

<ScrollingListView>:
    do_scroll_x: False
    do_scroll_y: True

<ListView>:
    cols: 1

<ListItem>:
    padding: [5, 5, 5, 5]
    canvas:
        Color:
            rgba: 1, 1, 1, 0.8
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
    cols: 2
    BaseLabel:
        text: root.title_text
        size_hint_x: 0.95
        mipmap: True
        text_size: self.size[0], None
        padding_x: 5
        valign: 'middle'
        halign: 'left'
    Button:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2
                points: [(self.x + self.width * 0.75), (self.y + self.height * 0.65), (self.x + self.width * 0.90), (self.y + self.height * 0.5), (self.x + self.width * 0.75), (self.y + self.height * 0.35)]
        background_color: app.colors['Dark']
        background_normal: ''
        opacity: 1 if self.state == 'normal' else 0.6
        size_hint_x: 0.05

        mipmap: True
        on_release: app.select_index(root.index)

<ListItemKeyboard>:
    keyboard_container: kbd
    padding: [5, 5, 5, 5]
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.8
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
    cols: 3
    LargeLabel:
        text: root.title_text
        size_hint_x: 0.5
        mipmap: True
        text_size: self.size[0]*0.9, None
        valign: 'middle'
        halign: 'left'
    ListItemKeyboardContainer:
        id: kbd
        size_hint_x: 0.4
    Button:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2
                points: [(self.x + self.width * 0.75), (self.y + self.height * 0.65), (self.x + self.width * 0.90), (self.y + self.height * 0.5), (self.x + self.width * 0.75), (self.y + self.height * 0.35)]
        background_color: app.colors['Dark']
        background_normal: ''
        opacity: 1 if self.state == 'normal' else 0.6
        size_hint_x: 0.05
        mipmap: True
        on_release: app.select_index(root.index)


<ListItemKeyboardContainer>:
    orientation: 'horizontal'
    padding: [0,0,10,0]
