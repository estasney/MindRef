#:import LargeLabel widgets.style
#:import BaseLabel widgets.style
#:import ThemedButton widgets.buttons
<ListView>:
    cols: 1
    height: self.minimum_height
    size_hint_y: None


<ScrollingListView>:
    do_scroll_x: False
    do_scroll_y: True
    content: content
    Scatter:
        size_hint_y: None
        height: content.minimum_height
        width: root.width
        scale: 1
        do_translation: False, False
        do_scale: False
        do_rotation: False
        ListView:
            meta_notes: root.meta_notes
            size_hint_y: None
            id: content
            cols: 1
            height: self.minimum_height
            width: root.width

<ListItem>:
    padding: dp(5)
    canvas:
        Color:
            rgba: app.colors['Gray-200']
        Line:
            width: dp(1)
            rectangle: (self.x, self.y, self.width, self.height)
        Color:
            rgba: app.colors['Primary']
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    height: dp(40)
    size_hint_y: None
    size_hint_x: 1
    BaseLabel:
        text: root.title_text
        size_hint_x: 0.9
        size_hint_y: 1
        mipmap: True
        text_size: self.width, None
        font_size: app.base_font_size
        padding_x: dp(5)
        valign: 'middle'
        halign: 'left'
    ThemedButton:
        padding: dp(5), dp(5)
        canvas:
            Color:
                rgba: app.colors['Gray-100']
            Line:
                width: dp(2)
                points: [(self.center_x - self.width * .3), (self.y + self.height * 0.75), (self.x + self.width * 0.90), self.center_y, (self.center_x - self.width * 0.3), (self.y + self.height * 0.25)]

        size_hint_x: 0.05

        mipmap: True
        on_release: app.select_index(root.index)
