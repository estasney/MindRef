#:import LargeLabel widgets.style
<NoteCategoryButton>:
    orientation: 'vertical'
    padding: dp(8)
    spacing: dp(2)
    image: image
    size_hint: 1, None
    height: dp(128)
    opacity: self.parent.opacity if self.parent else 1


    Image:
        id: image
        mipmap: True
        texture: root.tx_category

    LargeLabel:
        text: root.text
        text_size: (self.width, None)
        halign: 'center'
        valign: 'bottom'
        size_hint_x: 1
        size_hint_y: None
        height: self.texture_size[1]
