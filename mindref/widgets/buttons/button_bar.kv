#:import btns widgets.buttons.buttons


<NoteActionButtonBar>:
    orientation: "horizontal"

    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    AddButton:
        on_release: root.push_add_event(app)
    PrimaryVSep:
    EditButton:
        on_release: root.push_edit_event(app, app.note_category, app.note_data['idx'])


<ControllerButtonBar>:
    orientation: "horizontal"
    play_button: play_button

    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    ListViewButton:
        on_release: app.display_state_trigger('list')
    PrimaryVSep:
    BackButton:
        on_release: app.paginate(-1)
    PrimaryVSep:
    PlayStateButton:
        id: play_button
        on_release: self.playing = not self.playing
    PrimaryVSep:
    ForwardButton:
        on_release: app.paginate(1)
    PrimaryVSep:
    ReturnButton:
        on_release: app.note_category = ''
