#:import btns widgets.buttons.buttons

<NoteSpinnerOption>:
    background_color: app.colors['Primary']
    mipmap: True
    font_size: app.base_font_size

<DropDownButton@ThemedButton>:
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            width: dp(1)
            rectangle: (self.x, self.y, self.width, self.height)
    size_hint_y: None
    font_size: app.base_font_size + sp(4)
    height: dp(40)

<NoteActionDropDown>:
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    DropDownButton:
        text: 'Back'
        on_release: root.select('back')
    DropDownButton:
        text: 'List View'
        on_release: root.select('list')
    PrimaryHSep:
        color: app.colors['Gray-300']
    DropDownButton:
        text: 'Edit'
        on_release: root.select('edit')
    DropDownButton:
        text: 'New'
        on_release: root.select('add')

<NoteActionButton>:
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    text: 'Notes'
    font_size: app.base_font_size + sp(4)



<ControllerButtonBar>:
    orientation: "horizontal"
    play_button: play_button

    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    BackButton:
        on_release: app.paginate(-1)
    PrimaryVSep:
    PlayStateButton:
        id: play_button
        on_release: self.handle_press(app)

    PrimaryVSep:
    ForwardButton:
        on_release: app.paginate(1)
