#:import btns widgets.buttons.buttons

<NoteSpinnerOption>:
    background_color: app.colors['Primary']
    mipmap: True
    font_size: app.base_font_size


<NoteActionDropDown>:
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    ThemedButton:
        text: 'Edit'
        size_hint_y: None
        height: dp(40)
        on_release: root.select('edit')
    PrimaryHSep:
        color: app.colors['Gray-400']
    ThemedButton:
        text: 'New'
        size_hint_y: None
        height: dp(40)
        on_release: root.select('add')

<NoteActionButton>:
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    text: 'Notes'



<ControllerButtonBar>:
    orientation: "horizontal"
    play_button: play_button

    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    ListViewButton:
        on_release: app.display_state_trigger('list')
    PrimaryVSep:
    BackButton:
        on_release: app.paginate(-1)
    PrimaryVSep:
    PlayStateButton:
        id: play_button
        on_release: self.handle_press(app)

    PrimaryVSep:
    ForwardButton:
        on_release: app.paginate(1)
    PrimaryVSep:
    ReturnButton:
        on_release: app.display_state_trigger('choose')
