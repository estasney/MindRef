#:import StyledLabels widgets.style
#:import btns widgets.buttons.buttons
#:import bar widgets.buttons.button_bar

<Note>:
    id: note_container
    note_title: note_title
    note_content: note_content
    note_tags: note_tags

    BoxLayout:
        orientation: 'vertical'
        NoteTitleBar:
            padding: 0, dp(5), 0, dp(5)
            id: note_title
            size_hint: 1, 0.1
            size_hint_max_y: dp(45)
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
        NoteContent:
            id: note_content
            size_hint: 1, 0.75
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
        NoteTags:
            id: note_tags
            size_hint: 1, 0.05
            size_hint_max_y: dp(20)

<NoteTitleBar>:
    id: note_title
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: dp(5), dp(1), dp(5), dp(0)
        LargeLabel:
            id: note_title_label
            color: app.colors['White']
            text: note_title.title_text
            bold: True
            text_size: sp(self.size[0]*0.9), None
            pos_hint: {"x": 0, "y": 0}
            size_hint: (0.7, 1)
            halign: "center"
            valign: "center"
            mipmap: True
        NoteActionButton:
            size_hint_min_y: 0.95
            size_hint_x: 0.15
        ControllerButtonBar:
            size_hint_x: 0.3
            size_hint_min_y: 0.95
            padding: dp(2)




<NoteContent>:
    id: note_content
    orientation: 'vertical'
    canvas:
        Color:
            rgb: app.colors['Primary']
        Rectangle:
            pos: self.pos
            size: self.size


<NoteTags>:
    id: note_tags
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        SmallLabel:
            id: note_tag_label
            color: hex('#000000')
            text: ''
            mipmap: True
