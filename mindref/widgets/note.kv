#:import LargeLabel widgets.style
#:import NoteActionButton widgets.buttons.button_bar

<NoteTitleBar>:
    id: note_title
    action_button: action_button
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: dp(5), dp(1), dp(5), dp(0)
        LargeLabel:
            id: note_title_label
            color: app.colors['White']
            text: root.title
            bold: True
            text_size: sp(self.size[0]*0.9), None
            pos_hint: {"x": 0, "y": 0}
            size_hint: (0.7, 1)
            halign: "center"
            valign: "center"
            mipmap: True
        NoteActionButton:
            id: action_button
            size_hint_min_y: 0.95
            size_hint_x: 0.15





<NoteContent>:
    id: note_content
    orientation: 'vertical'
    canvas:
        Color:
            rgb: app.colors['Primary']
        Rectangle:
            pos: self.pos
            size: self.size

<Note>:
    id: note_container


    BoxLayout:
        orientation: 'vertical'
        NoteTitleBar:
            title: note_container.note_title
            index: note_container.note_index
            padding: 0, dp(5), 0, dp(5)
            size_hint: 1, 0.1
            size_hint_max_y: dp(45)
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
        NoteContent:
            id: note_content
            content: note_container.note_content
            size_hint: 1, 0.75
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
