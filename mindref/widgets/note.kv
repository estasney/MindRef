#:import LargeLabel widgets.style
#:import NoteActionButton widgets.buttons.button_bar
#:import ControllerButtonBar widgets.buttons.button_bar

<NoteTitleBar>:
    id: note_title
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: dp(5), dp(1), dp(5), dp(0)
        LargeLabel:
            id: note_title_label
            color: app.colors['White']
            text: note_title.title_text
            bold: True
            text_size: sp(self.size[0]*0.9), None
            pos_hint: {"x": 0, "y": 0}
            size_hint: (0.7, 1)
            halign: "center"
            valign: "center"
            mipmap: True
        NoteActionButton:
            size_hint_min_y: 0.95
            size_hint_x: 0.15





<NoteContent>:
    id: note_content
    orientation: 'vertical'
    canvas:
        Color:
            rgb: app.colors['Primary']
        Rectangle:
            pos: self.pos
            size: self.size


<NoteControlBar@BoxLayout>:
    id: note_tags
    orientation: 'vertical'
    height: self.minimum_height
    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size
    padding: dp(2)
    ControllerButtonBar:
        pos_hint: {"right": 1}
        size_hint_y: None
        height: dp(25)
        canvas:
            Color:
                rgb: app.colors['Accent-One']




<Note>:
    id: note_container
    note_title: note_title
    note_content: note_content
    note_control: note_control

    BoxLayout:
        orientation: 'vertical'
        NoteTitleBar:
            padding: 0, dp(5), 0, dp(5)
            id: note_title
            size_hint: 1, 0.1
            size_hint_max_y: dp(45)
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
        NoteContent:
            id: note_content
            size_hint: 1, 0.75
        HSeparator:
            size_hint: 1, 0.01
            size_hint_max_y: dp(2)
        NoteControlBar:
            id: note_control
            size_hint: 1, None
