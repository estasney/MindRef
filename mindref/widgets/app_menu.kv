#: import HSeparator widgets.separator
#: import ew kivy.uix.effectwidget
#: import effects widgets.effects
#: import buttons widgets.buttons

<GlowLine@EffectWidget>:
    effects: [effects.PulsingEffect(pulse_period=-.5, pulse_width=0.6, min_color=0.9)]
    size_hint_y: None
    height: sep.height
    HSeparator:
        id: sep
        color: app.colors['Accent-One']

<AppMenu>:
    pos_hint: {'top': 1}
    size_hint_y: 0.9
    size_hint_x: 0.3
    anchor_x: 'right'
    anchor_y: 'top'
    padding: dp(10)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        spacing: dp(5)
        height: self.minimum_height
        id: btnroot
        XButton:
            size_hint_x: None
            size_hint_y: None
            pos_hint: {"right": 1}
        GlowLine:
            size_hint_y: None
            size_hint_x: 1
        Button:
            padding: [0, dp(4)]
            text: "Settings"
            size_hint_y: None
            pos_hint: {"right": 1}
            height: self.texture_size[1]
            on_release: app.open_settings()
