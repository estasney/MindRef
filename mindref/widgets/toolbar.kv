#:import ExpandingLabel widgets.style
#:import buttons widgets.buttons
<Toolbar>:
    orientation: 'horizontal'
    padding: 0
    canvas.before:
        Color:
            rgba: app.colors['Primary']
        Rectangle:
            size: self.size
            pos: self.pos
    HamburgerIcon:
        release_callback: lambda : setattr(app, 'menu_open', not getattr(app, 'menu_open'))
    ExpandingLabel:
        text: app.APP_NAME
        halign: 'center'
        valign: 'center'
        font_size: app.base_font_size + sp(2)

