#:import parse_color kivy.parser.parse_color
#:import es kivy.effects.scroll

<MarkdownDocument>:
    content: content
    do_scroll_x: False
    effect_y: es.ScrollEffect(drag_threshold=dp(20))
    canvas:
        Color:
            rgba: app.colors['Primary']
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        size_hint_y: None
        id: content
        cols: 1
        height: self.minimum_height
        width: root.width
        padding: dp(10)
