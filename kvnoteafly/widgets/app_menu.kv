#: import HSeparator widgets.separator
#: import ew kivy.uix.effectwidget
#: import effects widgets.effects
#: import buttons widgets.buttons


<GlowLine@HSeparator>:
    color: app.colors['White']

<AppMenu>:
    pos_hint: {'top': 1}
    size_hint_y: 0.9
    size_hint_x: 0.3
    anchor_x: 'right'
    anchor_y: 'top'
    padding: 20
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        spacing: 5
        height: self.minimum_height
        id: btnroot
        XButton:

            size_hint_x: None
            size_hint_y: None
            pos_hint: {"right": 1}
        GlowLine:
            size_hint_y: None

        Button:
            padding: [0, 4]
            text: "Settings"
            size_hint_y: None
            pos_hint: {"right": 1}
            height: self.texture_size[1]
            on_release: app.open_settings()
