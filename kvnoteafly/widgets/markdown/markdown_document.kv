#:import parse_color kivy.parser.parse_color

<MarkdownDocument>:
    content: content
    scatter: scatter
    do_scroll_x: False
    canvas:
        Color:
            rgba: parse_color(root.colors['background'])
        Rectangle:
            pos: self.pos
            size: self.size
    Scatter:
        id: scatter
        size_hint_y: None
        height: content.minimum_height
        width: root.width
        scale: 1
        do_translation: False, False
        do_scale: False
        do_rotation: False
        GridLayout:
            size_hint_y: None
            id: content
            cols: 1
            height: self.minimum_height
            width: root.width
            padding: 10
