#:import parse_color kivy.parser.parse_color
#:import BaseLabel widgets.style
<MarkdownBlockQuote>:
    cols: 1
    size_hint_y: None
    height: content.texture_size[1] + 20
    id: parent
    padding: sp(10), sp(10), 0, sp(10)
    canvas:
        Color:
            rgba: (*app.colors['Gray-200'][:3], 0.5)
        Rectangle:
            pos: [self.pos[0], self.pos[1] + sp(5)]
            size: [self.size[0], self.size[1] -sp(10)]
        Color:
            rgba: app.colors['Accent-One']
        Rectangle:
            pos: [self.pos[0], self.pos[1] + sp(5)]
            size: [sp(4), self.height - sp(10)]
    BaseLabel:
        id: content
        bg_color: app.colors['Gray-500']
        markup: False
        valign: 'center'
        size: self.texture_size
        text_size: self.width, None
        font_size: app.base_font_size
        text: parent.text_content
